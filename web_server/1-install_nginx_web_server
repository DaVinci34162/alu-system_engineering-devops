#!/usr/bin/env bash
# This script installs and configures Nginx web server on Ubuntu
# to listen on port 80 and serve "Holberton School" at root URL

# Update package lists and install Nginx
apt-get update -y
apt-get install nginx -y

# Configure the default page
echo "Holberton School" > /var/www/html/index.html

# Restart Nginx (using service, not systemctl)
service nginx restart

# Verify the installation
if ! curl -s localhost | grep -q "Holberton School"; then
    echo "Configuration failed" >&2
    exit 1
fi

exit 0
